<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:background="#FFFFFF" android:clickable="true">






     <ViewSwitcher android:id="@+id/flipper" 
     android:layout_width="fill_parent" 
     android:layout_height="fill_parent" android:clickable="true">
     
     <TableLayout android:id="@+id/table" 
     android:layout_width="fill_parent" 
     android:background="#AAAAFF" 
     android:layout_height="fill_parent">
        
        
     
     
 <ListView android:name="list" android:id="@id/android:list" 
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent" 
 android:layout_weight="1" 
 android:longClickable="true" android:isScrollContainer="true" style="@style/Panel">
 </ListView>
 
  
 <TextView android:id="@+id/message"
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent" 
 android:textColor="#000000" 
 android:textSize="20dp" 
 android:visibility="gone"
 android:text="@string/beginMessage"   
 android:gravity="center_vertical|center_horizontal|center"/>
 
 
     
     
 </TableLayout>

 </ViewSwitcher>


</LinearLayout>